<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <ImageView
        android:layout_width="match_parent"
        app:srcCompat="@drawable/side_nav_bar"
        android:id="@+id/ivProduct"
        android:layout_height="200dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/layWish">

        <ImageView
            android:id="@+id/imageView14"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_circle_outline_black_24dp" />

        <ImageView
            android:id="@+id/imageView16"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_margin="2dp"
            android:src="@drawable/ic_circle_black_24dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="12dp"
            android:id="@+id/ivWish"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_favorite_border1_black_24dp"
            android:layout_margin="1dp" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="12dp"
            android:id="@+id/ivWish1"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_favorite_border1_black_24dp"
            android:layout_margin="1dp"
            android:visibility="gone"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="12dp"
            android:id="@+id/ivWishFill"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_favorite_black_24dp"
            android:layout_margin="1dp"
            android:visibility="gone"/>
    </RelativeLayout>
        <RelativeLayout
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/layCart">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/imageView17"
                android:src="@drawable/ic_circle_outline_black_24dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"/>

            <ImageView
                android:id="@+id/imageView18"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_margin="2dp"
                android:src="@drawable/ic_circle_black_24dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="12dp"
                android:id="@+id/ivCart"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_cart_outline1_black_24dp"
                android:layout_margin="1dp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="12dp"
                android:id="@+id/ivCartFill"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_cart_black_24dp"
                android:layout_margin="1dp"
                android:visibility="gone"/>
        </RelativeLayout>
    </LinearLayout>
    </FrameLayout>

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/tvProduct"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvReprice"
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#111111"
            android:paddingRight="5dp"
            android:layout_alignParentBottom="true"/>
        <TextView
            android:id="@+id/tvPrice"
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textColor="#ea0707"
            android:layout_alignParentBottom="true"/>
        <TextView
            android:id="@+id/tvDiscount"
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:textColor="#055404"
            android:layout_alignParentBottom="true"/>
    </LinearLayout>

</LinearLayout>