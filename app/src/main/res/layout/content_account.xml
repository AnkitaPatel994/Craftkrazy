<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_account"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.ankita.craftkrazy.Activity.AccountActivity"
    tools:showIn="@layout/activity_account">

    <TextView
        android:text="@string/txt_Account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textSize="30dp"
        android:id="@+id/txtAccount"
        android:textStyle="bold"
        android:layout_marginTop="21dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="\u2022  Account &amp; Information"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtAccount"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="20dp"

        android:layout_marginTop="40dp"
        android:id="@+id/txtAccountInfo" />

    <TextView
        android:text="\u2022  Order History"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtAccountInfo"
        android:layout_alignLeft="@+id/txtAccountInfo"
        android:layout_alignStart="@+id/txtAccountInfo"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:id="@+id/txtOrdHistory" />

    <TextView
        android:text="\u2022  Wish List"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtOrdHistory"
        android:layout_alignRight="@+id/txtOrdHistory"
        android:layout_alignEnd="@+id/txtOrdHistory"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:id="@+id/txtWishlist" />

    <TextView
        android:text="\u2022  Bank Detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtWishlist"
        android:layout_alignLeft="@+id/txtWishlist"
        android:layout_alignStart="@+id/txtWishlist"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:id="@+id/txtBankDetail" />

    <TextView
        android:text="\u2022  Change Password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtBankDetail"
        android:layout_alignRight="@+id/txtBankDetail"
        android:layout_alignEnd="@+id/txtBankDetail"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:id="@+id/txtChangepwd" />

    <TextView
        android:text="\u2022  Sign Out"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:id="@+id/txtSignout"
        android:layout_below="@+id/txtChangepwd"
        android:textSize="20dp" />

</RelativeLayout>
